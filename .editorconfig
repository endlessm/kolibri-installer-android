root = true
charset = utf-8
indent_style = spaces
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = tab

[*.py]
# Match black
indent_size = 4
max_line_length = 88

[*.java]
# Match AOSP style
indent_size = 4
max_line_length = 100

[{*.kt,*.kts}]
# Match AOSP style
indent_size = 4
max_line_length = 100

[*.xml]
indent_size = 4
